<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:id="@+id/scrollView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top vector graphic (slides up to show only bottom wave) -->
        <ImageView
            android:id="@+id/login_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:translationY="-224dp"
            android:src="@drawable/ic_green_background_vector"
            android:contentDescription="@string/app_name" />


        <!-- Login form (no translationY!) -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:translationY="-284dp"
            android:background="@android:color/transparent">

            <!-- Screen title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    style="@style/ScreenTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in" />

                <View
                    android:layout_width="70dp"
                    android:layout_height="3dp"
                    android:background="@color/auth_green"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Error message -->
            <TextView
                style="@style/ErrorText"
                android:id="@+id/login_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Error text here"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <!-- Email label -->
            <TextView
                style="@style/InputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="36dp" />

            <!-- Email input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_email_container"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textAppearance="@style/AppInputTextAppearance"
                    android:drawableStart="@drawable/ic_material_email"
                    android:drawableTint="@color/light_gray"
                    android:drawablePadding="8dp"
                    android:hint="Enter your email"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password label -->
            <TextView
                style="@style/InputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="16dp" />

            <!-- Password input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_password_container"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/light_gray"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textAppearance="@style/AppInputTextAppearance"
                    android:drawableStart="@drawable/ic_material_lock"
                    android:drawableTint="@color/light_gray"
                    android:drawablePadding="8dp"
                    android:hint="Enter your password"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Forgot Password link -->
            <TextView
                android:id="@+id/login_forgot_password_link"
                style="@style/AuthLinkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password?"
                android:layout_marginTop="4dp"
                android:layout_gravity="end" />

            <!-- Log In button -->
            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Log In"
                android:textSize="18sp"
                android:fontFamily="@font/rubik_medium"
                android:backgroundTint="@color/green"
                android:textColor="@android:color/white"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="16dp" />

            <!-- Sign up link -->
            <TextView
                android:id="@+id/login_signup_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:fontFamily="@font/rubik_regular"
                android:text="Donâ€™t have an account? Sign up" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
