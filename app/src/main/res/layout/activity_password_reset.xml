<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="-174dp"
        android:maxHeight="128dp">

        <include
            layout="@layout/vector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:layout_marginTop="-258dp">

        <!-- Screen title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/ScreenTitle"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:text="Reset Password" />

            <View
                android:layout_width="70dp"
                android:layout_height="3dp"
                android:background="@color/auth_green"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- OTP label -->
        <TextView
            style="@style/InputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter OTP"
            android:layout_marginTop="32dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reset_otp_container"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reset_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAppearance="@style/AppInputTextAppearance"
                android:drawableStart="@drawable/ic_material_lock"
                android:drawableTint="@color/light_gray"
                android:drawablePadding="8dp"
                android:hint="Enter OTP"
                android:paddingTop="16dp"
                android:paddingBottom="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- New password label -->
        <TextView
            style="@style/InputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reset_password_container"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reset_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textAppearance="@style/AppInputTextAppearance"
                android:drawableStart="@drawable/ic_material_lock"
                android:drawableTint="@color/light_gray"
                android:drawablePadding="8dp"
                android:hint="Enter new password"
                android:paddingTop="16dp"
                android:paddingBottom="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- New password label -->
        <TextView
            style="@style/InputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirm_password_container"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_material_lock"
                android:drawableTint="@color/light_gray"
                android:drawablePadding="8dp"
                android:textAppearance="@style/AppInputTextAppearance"
                android:hint="Re-enter new password"
                android:paddingTop="16dp"
                android:paddingBottom="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Error message -->
        <TextView
            android:id="@+id/reset_error"
            style="@style/ErrorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Reset button -->
        <Button
            android:id="@+id/reset_button"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:layout_marginTop="36dp" />

        <!-- Back to login link -->
        <TextView
            android:id="@+id/reset_back"
            android:fontFamily="@font/rubik_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Login"
            android:textSize="14sp"
            android:textColor="@color/auth_green"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>