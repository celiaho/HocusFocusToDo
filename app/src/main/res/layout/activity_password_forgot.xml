<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Vector Banner -->
        <ImageView
            android:id="@+id/forgot_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:translationY="-224dp"
            android:src="@drawable/ic_green_background_vector"
            android:contentDescription="@string/app_name" />

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:translationY="-304dp"
            android:background="@android:color/transparent">

            <!-- Screen title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    style="@style/ScreenTitle"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password?" />

                <View
                    android:layout_width="70dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/auth_green" />
            </LinearLayout>

            <!-- Email label -->
            <TextView
                style="@style/InputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Enter Email for OTP" />

            <!-- Email input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_email_container"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/forgot_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textAppearance="@style/AppInputTextAppearance"
                    android:drawableStart="@drawable/ic_material_email"
                    android:drawableTint="@color/light_gray"
                    android:drawablePadding="8dp"
                    android:hint="Enter your email"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Error message -->
            <TextView
                android:id="@+id/forgot_error"
                style="@style/ErrorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

            <!-- Continue button -->
            <Button
                android:id="@+id/forgot_continue_button"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:layout_marginTop="48dp" />

            <!-- Back to login link -->
            <TextView
                android:id="@+id/forgot_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Back to Login"
                android:textSize="14sp"
                android:textColor="@color/auth_green"
                android:fontFamily="@font/rubik_regular" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
