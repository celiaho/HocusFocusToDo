<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="-353dp"
        android:maxHeight="128dp">

        <include
            layout="@layout/vector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:layout_marginTop="-400dp">

            <!-- Title -->
            <TextView
                style="@style/ScreenTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"/>

            <!-- Error message -->
            <TextView
                style="@style/ErrorText"
                android:id="@+id/signup_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Error text here"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:visibility="invisible" />

            <!-- Email -->
            <TextView
                style="@style/InputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_input"
                android:paddingStart="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_email"/>

                <EditText
                    style="@style/TextInputLayoutStyle"
                    android:id="@+id/signup_email"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:hint="demo@email.com"
                    android:paddingStart="8dp" />
            </LinearLayout>

            <!-- First Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_input"
                android:paddingStart="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_user"
                    app:tint="@color/light_gray" />

                <EditText
                    android:id="@+id/signup_first_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:hint="Enter your first name"
                    android:textColor="@color/dark_gray"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp" />
            </LinearLayout>

            <!-- Last Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_input"
                android:paddingStart="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_user"
                    app:tint="@color/light_gray" />

                <EditText
                    android:id="@+id/signup_last_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:hint="Enter your last name"
                    android:textColor="@color/dark_gray"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp" />
            </LinearLayout>

            <!-- Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_input"
                android:paddingStart="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lock"
                    app:tint="@color/green" />

                <EditText
                    android:id="@+id/signup_password"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:hint="Enter your password"
                    android:textColor="@color/dark_gray"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp" />

                <ImageView
                    android:id="@+id/toggle_password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_visibility"
                    app:tint="@color/light_gray" />
            </LinearLayout>

            <TextView
                android:id="@+id/password_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password must be at least 8 letters"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginTop="2dp" />

            <!-- Confirm Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_input"
                android:paddingStart="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lock"
                    app:tint="@color/green" />

                <EditText
                    android:id="@+id/signup_confirm_password"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:hint="Confirm your password"
                    android:textColor="@color/dark_gray"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp" />

                <ImageView
                    android:id="@+id/toggle_confirm_password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_visibility"
                    app:tint="@color/light_gray" />
            </LinearLayout>

            <TextView
                android:id="@+id/confirm_password_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed password must match"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginTop="2dp" />

            <!-- Create Account button -->
            <Button
                android:id="@+id/signup_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Create Account"
                android:textSize="18sp"
                android:backgroundTint="@color/green"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <!-- Already have account link -->
            <TextView
                android:id="@+id/signup_login_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Login"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:layout_gravity="center" />

        </LinearLayout>
</LinearLayout>
