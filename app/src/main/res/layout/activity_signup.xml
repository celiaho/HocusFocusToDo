<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="-353dp"
        android:maxHeight="128dp">

        <include
            layout="@layout/vector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:layout_marginTop="-450dp">

        <!-- Screen title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/ScreenTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"/>

            <View
                android:layout_width="70dp"
                android:layout_height="3dp"
                android:background="@color/auth_green"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Error message (if you decide to keep it for API general errors) -->
        <TextView
            style="@style/ErrorText"
            android:id="@+id/signup_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error text here"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="invisible" />

        <!-- Email -->
        <TextView
            style="@style/InputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_email_container"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textAppearance="@style/AppInputTextAppearance"
                android:drawableStart="@drawable/ic_material_email"
                android:drawableTint="@color/light_gray"
                android:drawablePadding="8dp"
                android:hint="demo@email.com" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- First Name -->
        <TextView
            style="@style/InputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:layout_marginTop="12dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_first_name_container"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textAppearance="@style/AppInputTextAppearance"
                android:drawableStart="@drawable/ic_material_user"
                android:drawableTint="@color/light_gray"
                android:drawablePadding="8dp"
                android:hint="Enter your first name" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Last Name -->
        <TextView
            style="@style/InputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginTop="12dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_last_name_container"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textAppearance="@style/AppInputTextAppearance"
                android:drawableStart="@drawable/ic_material_user"
                android:drawableTint="@color/light_gray"
                android:drawablePadding="8dp"
                android:hint="Enter your last name" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <TextView
            style="@style/InputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="12dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_password_container"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/light_gray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textAppearance="@style/AppInputTextAppearance"
                android:drawableStart="@drawable/ic_material_lock"
                android:drawableTint="@color/light_gray"
                android:drawablePadding="8dp"
                android:hint="Enter your password" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Password -->
        <TextView
            style="@style/InputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:layout_marginTop="12dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_confirm_password_container"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/light_gray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textAppearance="@style/AppInputTextAppearance"
                android:drawableStart="@drawable/ic_material_lock"
                android:drawableTint="@color/light_gray"
                android:drawablePadding="8dp"
                android:hint="Confirm your password" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Create Account button -->
        <Button
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Create Account"
            android:textSize="18sp"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="12dp" />

        <!-- Already have account link -->
        <TextView
            android:id="@+id/signup_login_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/medium_gray"
            android:layout_gravity="center"
            android:text="Already have an account? Log in" />

    </LinearLayout>
</LinearLayout>
