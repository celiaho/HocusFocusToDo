<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/off_white"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:id="@+id/scrollView"
    tools:context="ui.auth.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Top vector image (adjustable based on translationY) -->
        <ImageView
            android:id="@+id/signup_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:translationY="-336dp"
            android:src="@drawable/ic_green_background_vector"
            android:contentDescription="@string/app_name" />

        <!-- Sign up form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:translationY="-448dp"
            android:background="@android:color/transparent" >

            <!-- Title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    style="@style/ScreenTitle"
                    android:text="Sign up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="70dp"
                    android:layout_height="3dp"
                    android:background="@color/auth_green"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Error text -->
            <TextView
                style="@style/ErrorText"
                android:id="@+id/signup_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Error text here"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>

            <!-- Email -->
            <TextView
                style="@style/InputLabel"
                android:text="Email"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_email_container"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textAppearance="@style/AppInputTextAppearance"
                    android:drawableStart="@drawable/ic_material_email"
                    android:drawableTint="@color/light_gray"
                    android:drawablePadding="8dp"
                    android:hint="Enter your email"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- First Name -->
            <TextView
                style="@style/InputLabel"
                android:text="First Name"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_first_name_container"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signup_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapSentences"
                    android:textAppearance="@style/AppInputTextAppearance"
                    android:drawableStart="@drawable/ic_material_user"
                    android:drawableTint="@color/light_gray"
                    android:drawablePadding="8dp"
                    android:hint="Enter your first name"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Last Name -->
            <TextView
                style="@style/InputLabel"
                android:text="Last Name"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_last_name_container"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signup_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapSentences"
                    android:textAppearance="@style/AppInputTextAppearance"
                    android:drawableStart="@drawable/ic_material_user"
                    android:drawableTint="@color/light_gray"
                    android:drawablePadding="8dp"
                    android:hint="Enter your last name"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password -->
            <TextView
                style="@style/InputLabel"
                android:text="Password"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_password_container"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/light_gray"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textAppearance="@style/AppInputTextAppearance"
                    android:drawableStart="@drawable/ic_material_lock"
                    android:drawableTint="@color/light_gray"
                    android:drawablePadding="8dp"
                    android:hint="Enter your password"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirm Password -->
            <TextView
                style="@style/InputLabel"
                android:text="Confirm Password"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_confirm_password_container"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/light_gray"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signup_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textAppearance="@style/AppInputTextAppearance"
                    android:drawableStart="@drawable/ic_material_lock"
                    android:drawableTint="@color/light_gray"
                    android:drawablePadding="8dp"
                    android:hint="Confirm your password"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Create Account Button -->
            <Button
                android:id="@+id/signup_button"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <!-- Already have account link -->
            <TextView
                android:id="@+id/signup_login_link"
                style="@style/SecondaryPromptText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Already have an account? Log in" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>