<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base app theme: Task Overview + post-auth screens -->
    <style name="Theme.HocusFocus" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Task Overview uses blue focus underline -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item> <!-- What is this used for? -->
<!--        <item name="colorSecondary">@color/blue</item>-->
        <item name="colorError">@color/error_red</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/off_white</item>

        <!-- Default input style -->
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>

        <!-- Optional toolbar style or other overrides -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>

        <!-- Prevent forced dark mode on newer devices -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">@color/dark_gray</item>

    </style>

    <!-- Auth pages theme: auth_green focus underline -->
    <style name="Theme.HocusFocus.Auth" parent="Theme.HocusFocus">
        <item name="colorPrimary">@color/auth_green</item>
    </style>

    <!-- Fast-splash launch theme -->
    <style name="Theme.HocusFocus.Launcher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>
